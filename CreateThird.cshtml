                    </div>
                    <br />
                    <div class="col">
                        <form method="post">
                            <label asp-for="Enlace3.Ocupacion"></label>
                            <input asp-for="Enlace3.Ocupacion" class="form-control" />
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <form method="post">
            <label asp-for="Enlace3.NombreMom"></label>
            <input asp-for="Enlace3.NombreMom" class="form-control" />
        </form>

