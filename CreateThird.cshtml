            <label asp-for="Enlace3.Ingresos"></label>
            <input asp-for="Enlace3.Ingresos" class="form-control" />
        </form>
        <a class="nav-link text-black-50" asp-area="" asp-page="/Info_Alumno/Index">Salir</a>
        <div class="col-6 text-xl-right">
            <a asp-page="/Info_Familiar/CreateThird" class="btn btn-primary">Guardar</a>
        </div>
    </div>
</body>

